package com.kh.notice.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.kh.notice.model.service.NoticeService;
import com.kh.notice.model.vo.Notice;

/**
 * Servlet implementation class NoticeDetailController
 */
@WebServlet("/datail.no")
public class NoticeDetailController extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public NoticeDetailController() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		//DB에 접근해서 클릭했을때 글번호 가져오기
		
		//글번호 => "1","2"..으로 저장되어 있을 경우에만 Integer.parseInt형변환 가능
		//nno => 글번호 //noticeListView에서 nno가 설정되어있음
		int nno = Integer.parseInt(request.getParameter("nno"));
		
		/*
		 * SELECT *
		 * FROM NOTICE
		 * WHERE NOTICE_NO = ${nno}
		 */
		
		//조회수 증가용 서비스
		/*
		 * UPDATE NOTICE
		 * SET COUNT = COUNT +1;
		 * WHERE NOTICE_NO = ${nno}
		 */
		int result = new NoticeService().increaseCount(nno);
		
		
		if(result>0) {
			//조회수 증가에 성공했을때 -> 공지사항 상세조회후 noticeDetailView로 포워딩
			request.getRequestDispatcher("views/notice/noticeDetailView.jsp").forward(request, response);
			
			Notice n = new NoticeService().selectNotice(nno);
			request.setAttribute("n", n);
			
			
		}else {//주회수 증가에 실패했을때 -> 에러페이지로 포워딩 됨
			request.getRequestDispatcher("views/common/errorPage.jsp").forward(request, response);
			request.setAttribute("errorMsg", "공지사항조회 실패");
		}
		
		
		
		
		
		
		
		
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
